{
  "api_documentation": {
    "title": "Job Application App API Documentation",
    "version": "1.0.0",
    "base_url": "https://api.jobapp.com/v1",
    "authentication": {
      "type": "Bearer Token",
      "header": "Authorization: Bearer {token}",
      "description": "All protected endpoints require a valid JWT token in the Authorization header"
    },
    "endpoints": {
      "authentication": {
        "login": {
          "method": "POST",
          "url": "/auth/login",
          "description": "Authenticate user and return JWT token",
          "request_parameters": {
            "body": {
              "email": "string (required)",
              "password": "string (required)"
            }
          },
          "request_example": {
            "email": "john.doe@example.com",
            "password": "securePassword123"
          },
          "response_example": {
            "success": true,
            "data": {
              "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
              "user": {
                "id": 1,
                "name": "John Doe",
                "email": "john.doe@example.com",
                "phone": "+91 9876543210",
                "location": "Hyderabad, India",
                "skills": ["React Native", "SQL", "AWS"],
                "profileCompletion": 60,
                "preferences": {
                  "role": "Software Developer",
                  "location": "Bangalore",
                  "type": "Full-time"
                }
              }
            }
          },
          "error_responses": {
            "400": "Invalid credentials",
            "401": "Unauthorized",
            "500": "Internal server error"
          }
        },
        "register": {
          "method": "POST",
          "url": "/auth/register",
          "description": "Register new user account",
          "request_parameters": {
            "body": {
              "name": "string (required)",
              "email": "string (required)",
              "password": "string (required)",
              "phone": "string (optional)",
              "location": "string (optional)"
            }
          },
          "request_example": {
            "name": "John Doe",
            "email": "john.doe@example.com",
            "password": "securePassword123",
            "phone": "+91 9876543210",
            "location": "Hyderabad, India"
          },
          "response_example": {
            "success": true,
            "data": {
              "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
              "user": {
                "id": 1,
                "name": "John Doe",
                "email": "john.doe@example.com",
                "phone": "+91 9876543210",
                "location": "Hyderabad, India",
                "profileCompletion": 20,
                "preferences": {
                  "role": "",
                  "location": "",
                  "type": ""
                }
              }
            }
          },
          "error_responses": {
            "400": "Validation error",
            "409": "Email already exists",
            "500": "Internal server error"
          }
        },
        "logout": {
          "method": "POST",
          "url": "/auth/logout",
          "description": "Logout user and invalidate token",
          "authentication_required": true,
          "response_example": {
            "success": true,
            "message": "Logged out successfully"
          }
        },
        "refresh_token": {
          "method": "POST",
          "url": "/auth/refresh",
          "description": "Refresh JWT token",
          "authentication_required": true,
          "response_example": {
            "success": true,
            "data": {
              "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
            }
          }
        }
      },
      "jobs": {
        "get_jobs": {
          "method": "GET",
          "url": "/jobs",
          "description": "Get paginated list of jobs with filtering and search",
          "authentication_required": true,
          "request_parameters": {
            "query": {
              "page": "number (optional, default: 1)",
              "limit": "number (optional, default: 20)",
              "search": "string (optional)",
              "jobType": "string[] (optional)",
              "location": "string[] (optional)",
              "salaryMin": "number (optional)",
              "salaryMax": "number (optional)",
              "experience": "string[] (optional)",
              "isRemote": "boolean (optional)",
              "isUrgent": "boolean (optional)",
              "sortBy": "string (optional: 'relevance', 'date', 'salary')",
              "sortOrder": "string (optional: 'asc', 'desc')"
            }
          },
          "request_example": "GET /jobs?page=1&limit=20&search=react&jobType=Full-time&location=Bangalore&salaryMin=50000&salaryMax=150000&isRemote=true&sortBy=relevance&sortOrder=desc",
          "response_example": {
            "success": true,
            "data": {
              "jobs": [
                {
                  "id": "1",
                  "title": "Senior React Native Developer",
                  "company": "TechCorp Inc.",
                  "location": "San Francisco, CA",
